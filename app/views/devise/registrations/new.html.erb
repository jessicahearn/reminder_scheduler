<h2 class="hdg hdg_2">Sign up</h2>

<div class="vr">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="mod">
      <div class="field">
        <%= f.label :email, class: "hdg hdg_3" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_field" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "hdg hdg_3" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form_field" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "hdg hdg_3" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form_field" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn" %>
      </div>
    </div>
  <% end %>
</div>

<div class="vr">
  <%= render "devise/shared/links" %>
</div>
