<h2 class="hdg hdg_2">Forgot your password?</h2>

<div class="vr">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="mod">
          <div class="field">
            <%= f.label :email, class: "hdg hdg_3" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_field" %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions", class: "btn" %>
          </div>
      </div>
    <% end %>
</div>

<div class="vr">
    <%= render "devise/shared/links" %>
</div>
